<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title> Cronos </title>
    <link href="/content/tallereva2.css" rel="stylesheet" type="text/css">
    <link rel="shortcut icon" href="/Content/img/mini3.jpg" />
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">

</head>
<body>


    <div class="topnav sticky">
        <div class=" logo">
            <a href="/Home/Logout"><img src="/Content/img/logo4.png" class="logo pumpy"> línica Cronos</a>

        </div>
        <a class="active topnav-a bumpy" href="/Home/Logout">Cerrar Sesión</a>
        <a class="active topnav-a bumpy" href="/Administrador/Citas">Citas</a>
        <a class="active topnav-a bumpy" href="/Administrador/Horas">Horas</a>
        <a class="active topnav-a bumpy" href="/Administrador/Servicios">Servicios</a>
        <a class="active topnav-a bumpy" href="/Administrador/Pacientes">Pacientes</a>
        <a class="active topnav-a bumpy" href="/Administrador/Usuarios">Usuarios</a>
    </div>

    @Html.Raw(ViewBag.Table)

    <form method="post" action="/BDD/ingresarPaciente" style="width:20%; margin-left:100px; margin-top:100px;">
        <label for="text"><h1> Registro de Pacientes </h1></label>
        <br><br>
        <div class="form-group">
            <label for="text">Rut  Paciente</label>
            <input autocomplete="off" type="text" required="" pattern="\d{3,8}-[\d|kK]{1}" class="form-control" id="exampleInputEmail1" name="Rut">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Nombre  Paciente</label>
            <input autocomplete="off" type="text" class="form-control" required="" pattern="[A-Za-z]+" id="exampleInputEmail1" placeholder="" name="Nombre">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Telefono Paciente  </label>
            <input autocomplete="off" type="text" class="form-control" maxlength="9" required="" pattern="[0-9]+" id="exampleInputEmail1" placeholder="912345678" name="Telefono">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Email Paciente</label>
            <input autocomplete="off" type="email" class="form-control" id="exampleInputEmail1" required="" placeholder="" name="Email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Sexo Paciente</label>
            <select autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" required="" placeholder="" name="Sexo">
                <option value="" selected></option>
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>
            </select>
        </div>


        <div class="form-group">
            <label for="exampleInputPassword1">Direccion Paciente</label>
            <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" required="" placeholder="" name="Direccion">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Prevision Paciente</label>
            <select autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" required="" placeholder="" name="Prevision">
                <option value="" selected></option>
                <option value="Fonasa">Fondo Nacional De Salud (Fonasa)</option>
                <option value="Isalud">Isalud Isapre De Codelco</option>
                <option value="Banmédica">Isapre Banmédica</option>
                <option value="Colmena">Isapre Colmena</option>
                <option value="Consalud">Isapre Consalud</option>
                <option value="Cruz">Isapre Cruz Del Norte</option>
                <option value="Fundación_Banco">Isapre Fundación Banco Estado</option>
                <option value="Másvida">Isapre Nueva Másvida</option>
                <option value="VidaTres">Isapre Vida Tres</option>
                <option value="Particular">Particular</option>

            </select>
        </div>



        <button type="submit" name="Submit" class="btn btn-primary" value="Insertar">Ingresar</button>


    </form>

    <form method="post" action="/BDD/eliminarPaciente" style="width:20%; margin-left:100px; margin-top:100px;">
        <label for="text"><h3> Eliminar Pacientes </h3></label>
        <div class="form-group">
            <label for="text">Ingrese Rut a eliminar</label>
            <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" name="Rut">
        </div>

        <button type="submit" name="Submit" class="btn btn-primary" value="Eliminar">Eliminar</button>

    </form>

    <form method="post" action="/BDD/editarPaciente" style="width:20%; margin-left:100px; margin-top:100px;">
        <label for="text"><h3> Editar Pacientes </h3></label>
        <br><br>
        <div class="form-group">
            <label for="text">Rut  Paciente</label>
            <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" name="Rut">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Nombre  Paciente</label>
            <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Nombre">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Telefono Paciente  </label>
            <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Telefono">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Email Paciente</label>
            <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Sexo Paciente</label>
            <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Sexo">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Direccion Paciente</label>
            <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Direccion">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Prevision Paciente</label>
            <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Prevision">
        </div>

        <button type="submit" name="Submit" class="btn btn-primary" value="Insertar">Editar</button>
    </form>


</body>


</html>