<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title> Cronos </title>
    <link href="/content/tallereva2.css" rel="stylesheet" type="text/css">
    <link rel="shortcut icon" href="/Content/img/mini3.jpg" />
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/tallereva2.css")

</head>
<body>


    <div class="topnav sticky">
        <div class=" logo">
            <a href="/Home/Logout"><img src="/Content/img/logo4.png" class="logo pumpy"> línica Cronos</a>

        </div>
        <a class="active topnav-a bumpy" href="/Home/Logout">Cerrar Sesión</a>
        <a class="active topnav-a bumpy" href="/Administrador/Citas">Citas</a>
        <a class="active topnav-a bumpy" href="/Administrador/Horas">Horas</a>
        <a class="active topnav-a bumpy" href="/Administrador/Servicios">Servicios</a>
        <a class="active topnav-a bumpy" href="/Administrador/Pacientes">Pacientes</a>
        <a class="active topnav-a bumpy" href="/Administrador/Usuarios">Usuarios</a>
    </div>

    @Html.Raw(ViewBag.Table)
    @ViewBag.mensaje

    <form method="post" action="/BDD/ingresarServicio" style="width:20%; margin-left:100px; margin-top:100px;">
        <label for="text"><h1> Registro de Servicios </h1></label>
        <br><br>
        <div class="form-group">
            <label for="text">Nombre de Servicio</label>
            <input required="" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" name="Nombre">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Precio Servicio</label>
            <input pattern="[0-9]+" required="" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Precio">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Especialidad</label>
            <input required="" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Especialidad">
        </div>


        <button type="submit" name="Submit" class="btn btn-primary" value="Insertar">Ingresar</button>


    </form>

    <form method="post" action="/BDD/eliminarServicio" style="width:20%; margin-left:100px; margin-top:100px;">
        <label for="text"><h3> Eliminar Servicios </h3></label>
        <div class="form-group">
            <label for="text">Ingrese Id del Servicio a Eliminar</label>
            <input pattern="[0-9]+" required="" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" name="Id">
        </div>

        <button type="submit" name="Submit" class="btn btn-primary" value="Eliminar">Eliminar</button>

    </form>


    <form method="post" action="/BDD/editarServicio" style="width:20%; margin-left:100px; margin-top:100px;">
        <label for="text"><h3> Editar Servicios </h3></label>
        <br><br>
        <div class="form-group">
            <label for="text">Id Servicio</label>
            <input pattern="[0-9]+" required="" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" name="Id">
        </div>
        <div class="form-group">
            <label for="text">Nombre Servicio</label>
            <input required="" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" name="Nombre">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Precio</label>
            <input required="" pattern="[0-9]+" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Precio">
        </div>
        <div class="form-group">
            <label for="text">Especialidad</label>
            <input required="" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" name="Especialidad">
        </div>
        <button type="submit" name="Submit" class="btn btn-primary" value="Insertar">Editar</button>


    </form>

</body>


</html>
