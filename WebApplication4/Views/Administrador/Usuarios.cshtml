<form method="post" action="/BDD/ingresarUsuario" style="width:20%; margin-left:100px; margin-top:100px;">
    <label for="text"><h1> Registro de Usuarios </h1></label>
    <br><br>
    <div class="form-group">
        <label for="text">Nombre</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="Nombre" required="" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="text">Nombre de Usuario</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="Usuario" required="" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Clave de Usuario</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Clave" required="" pattern="[A-Za-z0-9]+" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Rut de Usuario   </label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Ej:11111111-1" name="Rut" required="" pattern="\d{3,8}-[\d|kK]{1}" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Telefono</label>
        <input type="tel" class="form-control" id="exampleInputEmail1" placeholder="Ej:912345678" maxlength="9" pattern="[0-9]+" name="Telefono" required="" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Oficina</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Oficina" required="" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Especialidad</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Especialidad" required="" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Nivel de Usuario</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Ej:1" required="" pattern="[+0-9]" name="Tipo" autocomplete="off">
    </div>

    <button type="submit" name="Submit" class="btn btn-primary" value="Insertar">Ingresar</button>
    

</form>
    <br> <br>
    <form method="post" action="/BDD/eliminarUsuario" style="width:20%; margin-left:100px; margin-top:100px;">
