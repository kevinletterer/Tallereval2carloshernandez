            <input type="text" class="form-control" id="exampleInputEmail1" name="Nombre" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="text">Nombre de Usuario</label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="Usuario" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Clave de Usuario</label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Clave" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Rut de Usuario   </label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Rut" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Telefono</label>
            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="" name="Telefono" autocomplete="off">
        </div>
        <div class="form-group">
