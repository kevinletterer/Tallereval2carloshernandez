    <div id="Contactenos">
        <br><br><br><br>
        <table>
            <td>
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1664.5341912870838!2d-70.63277971160544!3d-33.44752490388978!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9662c579e58b5e79%3A0xdc707a6929a91580!2sEdificio%20Cronos!5e0!3m2!1ses-419!2scl!4v1603236287002!5m2!1ses-419!2scl" width="90%" height="90%" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>
            </td>
            <td>
                <div class="container">
                    <form action="#sent">

                        <label for="name">Nombre</label>
                        <input type="text" id="name" name="firstname" placeholder="Tu nombre completo" autocomplete="off">

                        <label for="mail">Correo</label>
                        <input type="text" id="mail" name="mail" placeholder="Tu correo" autocomplete="off">

                        <label for="country">Pais</label>
                        <select id="country" name="country">

                            <option value="chile">Chile</option>
                            <option value="argentina">Argentina</option>
                            <option value="Brasil">Brasil</option>
                            <option value="canada">Canadá</option>
                            <option value="peru">Perú</option>
                            <option value="Uruguay">Uruguay</option>
                            <option value="usa">USA</option>
                        </select>

                        <label for="subject">Asunto</label>
                        <textarea id="subject" name="subject" placeholder="Escribe tu mensaje..."></textarea>
                        <center>
                            <input type="submit" value="Enviar">
                        </center>
                    </form>
                </div>
            </td>
        </table>
    </div>



