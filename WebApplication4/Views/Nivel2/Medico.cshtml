    @Styles.Render("~/Content/tallereva2.css")

</head>
<body>


    <div class="topnav sticky">
        <div class=" logo">
            <a href="/Home/Logout"><img src="/Content/img/logo4.png" class="logo pumpy"> línica Cronos</a>

        </div>
        <a class="active topnav-a bumpy" href="/Home/Logout">Cerrar Sesión</a>



    </div>
    <center>
        <h1> Bienvenido @ViewBag.nombre </h1>

        <h2>Mis horas</h2>
        @Html.Raw(ViewBag.Table1)
        @ViewBag.mensaje

        <h2>Citas contigo</h2>
        @Html.Raw(ViewBag.Table2)
        <h2>Pacientes que verás</h2>
        @Html.Raw(ViewBag.Table3)

        

        <h2>Editar mis horas</h2>


        <form method="post" action="/BDD/ingresarHora2" style="width:20%; margin-left:100px; margin-top:100px;">
            <label for="text"></label>
            <br><br>

            <div class="form-group">
                <input type="hidden" class="form-control" id="exampleInputEmail1" placeholder="" name="Id_Usuario" value="@ViewBag.IdUsuario">
            </div>


            <table style="width:18vw">

                <tr>
                    <td>
                        <p>Fecha: <input required="" autocomplete="off" type="text" id="datepicker2" name="Fecha"></p>
                        <script>
                            jQuery(function ($) {
                                $("#datepicker2").datepicker();
                            });
                        </script>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Horas disponibles</label>
                            <select required="" autocomplete="off" readonly="" class="form-control" id="hora" name="Hora">
                                <option>8:30 AM</option>
                                <option>8:30 AM</option>
                                <option>9:00 AM</option>
                                <option>9:30 AM</option>
                                <option>10:00 AM</option>
                                <option>10:30 AM</option>
                                <option>12:00 AM</option>
                                <option>12:30 PM</option>
                                <option>1:00 PM</option>
                                <option>1:30 PM</option>
                                <option>2:00 PM</option>
                                <option>2:30 PM</option>
                                <option>3:00 PM</option>
                                <option>3:30 PM</option>
                                <option>4:00 PM</option>
                                <option>4:30 PM</option>
                                <option>5:00 PM</option>
                                <option>5:30 PM</option>
                                <option>6:00 PM</option>
                                <option>6:30 PM</option>
                            </select>
                        </div>
                    </td>
                </tr>
            </table>

            <div class="form-group">
                <label for="exampleInputPassword1">Disponible</label>
                <select required="" autocomplete="off" readonly="" class="form-control" id="Disponible" name="Disponible">
                    <option>Si</option>
                    <option>No</option>
                </select>
            </div>


            <button type="submit" name="Submit" class="btn btn-primary" value="Insertar">Ingresar</button>


        </form>

        <form method="post" action="/BDD/eliminarHora2" style="width:20%; margin-left:100px; margin-top:100px;">
            <label for="text"><h3> Eliminar Hora Paciente </h3></label>
            <div class="form-group">
                <label for="text">Ingrese ID Hora a eliminar</label>
                <input required="" autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" name="Id">
            </div>
            <div class="form-group">
                <input type="hidden" class="form-control" id="exampleInputEmail1" placeholder="" name="Id_Usuario" value="@ViewBag.IdUsuario">
            </div>

            <button type="submit" name="Submit" class="btn btn-primary" value="Eliminar">Eliminar</button>

        </form>

        <form method="post" action="/BDD/editarHora2" style="width:20%; margin-left:100px; margin-top:100px;">
            <label for="text"><h3> Editar Hora </h3></label>
            <br><br>
            <div class="form-group">
                <input type="hidden" class="form-control" id="exampleInputEmail1" placeholder="" name="Id_Usuario" value="@ViewBag.IdUsuario">
            </div>
            <div class="form-group">
                <label for="text">ID Hora</label>
                <input autocomplete="off" type="text" class="form-control" id="exampleInputEmail1" name="Id">
            </div>
            <div class="form-group">
                <input required="" autocomplete="off" type="hidden" class="form-control" id="exampleInputEmail1" placeholder="" name="ID_Usuario" value="@Html.Raw(ViewBag.IdUsuario)">
            </div>

            <table style="width:18vw">

                <tr>
                    <td>
                        <p>Fecha: <input required="" autocomplete="off" type="text" id="datepicker" name="Fecha"></p>
                        <script>
                            jQuery(function ($) {
                                $("#datepicker").datepicker();
                            });
                        </script>
                    </td>
                    <td>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Horas disponibles</label>
                            <select required="" autocomplete="off" readonly="" class="form-control" id="hora" name="Hora">
                                <option>8:30 AM</option>
                                <option>8:30 AM</option>
                                <option>9:00 AM</option>
                                <option>9:30 AM</option>
                                <option>10:00 AM</option>
                                <option>10:30 AM</option>
                                <option>12:00 AM</option>
                                <option>12:30 PM</option>
                                <option>1:00 PM</option>
                                <option>1:30 PM</option>
                                <option>2:00 PM</option>
                                <option>2:30 PM</option>
                                <option>3:00 PM</option>
                                <option>3:30 PM</option>
                                <option>4:00 PM</option>
                                <option>4:30 PM</option>
                                <option>5:00 PM</option>
                                <option>5:30 PM</option>
                                <option>6:00 PM</option>
                                <option>6:30 PM</option>
                            </select>
                        </div>
                    </td>
                </tr>
            </table>


            <div class="form-group">
                <label for="exampleInputPassword1">Disponible</label>
                <select required="" autocomplete="off" readonly="" class="form-control" id="Disponible" name="Disponible">
                    <option>Si</option>
                    <option>No</option>
                </select>
            </div>

            <button type="submit" name="Submit" class="btn btn-primary" value="Insertar">Editar</button>
        </form>




    </center>
</body>


</html>